<div
  class='color-{{ section.settings.color_scheme }} twcss-relative lg:twcss-py-[5rem] twcss-py-[2.5rem]'
  style='background-image:linear-gradient(90deg, #C6E123 0%, #3D8124 100%) !important'
>
  <style>
    @media (min-width: 990px) {
      .bg-image {
        background-image: url(https://cdn.shopify.com/s/files/1/0550/1560/4383/files/leave-bottle-png.png?v=1741800037);
        background-position: 314px -65px;
        background-repeat: no-repeat;
        background-size: 30% auto;
      }
    }
    .bg-image {
      background-position: -67px 29px;
      background-size: 371px auto;
    }
  </style>
  <div
    class='bg-image twcss-absolute twcss-top-0 twcss-left-0 twcss-w-full twcss-h-full'
  >
    &nbsp;
  </div>
  <div
    class='custom-section isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding'
  >
    <div
      {% if section.settings.full_width %}
        class='page-width'
      {% endif %}
    >
      <div class='twcss-flex lg:twcss-flex-row twcss-flex-col twcss-p-[1rem]'>
        <div
          class='lg:twcss-w-3/5'
        >
          <h2 class='lg:twcss-text-[7rem] twcss-text-[4.5rem] twcss-text-white twcss-font-medium twcss-leading-none twcss-mb-[1.6rem]'>
            Subscribe & Save
          </h2>
          <p class='lg:twcss-text-[1.8rem] twcss-text-[1.5rem] twcss-mb-[1.6rem] twcss-text-white'>
            Sign up for our newsletter and receive an exclusive 10% discount on your first purchase!
          </p>
          <p class='lg:twcss-text-[1.8rem] twcss-text-[1.5rem] twcss-mb-[1.6rem] twcss-text-white'>
            Stay updated on special offers, health tips, and product news.
          </p>
        </div>
        <div class='twcss-flex twcss-gap-[2rem] twcss-flex-col lg:twcss-w-2/5 twcss-justify-center'>
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter' -%}
            <input type='hidden' name='contact[tags]' value='newsletter'>
            <div class='contact__fields twcss-flex lg:twcss-flex-row twcss-flex-col twcss-gap-[2rem] twcss-mb-[2rem]'>
              <div class='field twcss-border-0 after:twcss-shadow-none twcss-shadow-none lg:twcss-w-1/3'>
                <input
                  class='field__input lg:twcss-text-[1.8rem] twcss-text-[1.5rem] twcss-border-0 twcss-text-black twcss-leading-[1.4] twcss-min-h-[4rem] twcss-rounded-[.3rem] twcss-bg-white twcss-px-[1.6rem] twcss-py-[.8rem]'
                  autocomplete='name'
                  type='text'
                  id='ContactForm-name'
                  name='contact[{{ 'templates.contact.form.name' | t }}]'
                  value='{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}'
                  placeholder='{{ 'templates.contact.form.name' | t }}'
                >
                <label class='field__label' for='ContactForm-name'>{{ 'templates.contact.form.name' | t }}</label>
              </div>
              <div class='field field--with-error twcss-border-0 after:twcss-shadow-none twcss-shadow-none lg:twcss-w-2/3'>
                <input
                  autocomplete='email'
                  type='email'
                  id='ContactForm-email'
                  class='field__input lg:twcss-text-[1.8rem] twcss-text-[1.5rem] twcss-border-0 twcss-text-black twcss-leading-[1.4] twcss-min-h-[4rem] twcss-rounded-[.3rem] twcss-bg-white twcss-px-[1.6rem] twcss-py-[.8rem]'
                  name='contact[email]'
                  spellcheck='false'
                  autocapitalize='off'
                  value='{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}'
                  aria-required='true'
                  {% if form.errors contains 'email' %}
                    aria-invalid='true'
                    aria-describedby='ContactForm-email-error'
                  {% endif %}
                  placeholder='{{ 'templates.contact.form.email' | t }}'
                >
                <label class='field__label' for='ContactForm-email'>
                  {{- 'templates.contact.form.email' | t }}
                  <span aria-hidden='true'>*</span></label
                >
                {%- if form.errors contains 'email' -%}
                  <small class='contact__field-error' id='ContactForm-email-error'>
                    <span class='visually-hidden'>{{ 'accessibility.error' | t }}</span>
                    <span class='form__message'>
                      <span class='svg-wrapper'>
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </span>
                  </small>
                {%- endif -%}
              </div>
            </div>
            <div class='contact__button twcss-w-full'>
              <button
                type='submit'
                name='commit'
                id='Subscribe'
                class='button twcss-w-full twcss-uppercase twcss-font-heading lg:twcss-text-[2rem] twcss-text-[1.6rem] twcss-leading-[2rem] twcss-rounded-[.3rem] twcss-text-white twcss-text-center twcss-font-semibold twcss-px-[2.4rem] twcss-bg-[--accent-color-2] hover:twcss-scale-[.9] twcss-transition-all twcss-border-0 twcss-shadow-none after:twcss-shadow-none'
              >
                Get 10% Discount Code Now!
              </button>
              {%- if form.errors -%}
                <small class='newsletter-form__message form__message' id='ContactFooter-error'>
                  <span class='svg-wrapper'>
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class='newsletter-form__message newsletter-form__message--success form__message'
                id='ContactFooter-success'
                tabindex='-1'
                autofocus
              >
                <span class='svg-wrapper'>
                  {{- 'icon-success.svg' | inline_asset_content -}}
                </span>
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>

