{% style %}
  .zoom-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    padding-top: 60px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
  }

  .zoom-content {
    display: block;
    margin: auto;
    max-width: 90%;
    max-height: 80%;
  }

  .zoom-modal .close {
    position: absolute;
    top: 30px;
    right: 45px;
    color: #fff;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
  }
{% endstyle %}
